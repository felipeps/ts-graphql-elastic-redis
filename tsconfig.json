{
   "compilerOptions": {
      "moduleResolution": "node",
      "types": ["node"],
      "lib": [
         "es5",
         "es6",
         "ES2020"
      ],
      "emitDecoratorMetadata": false,
      "experimentalDecorators": true,
      "sourceMap": true,
      "outDir": "dist",
      "module": "esnext",
      "target": "ES2022",
      "esModuleInterop": true,
      "allowJs": true
   },
   "include": [
      "src"
   ],
   "exclude": [
      "**/*.spec.ts",
      "**/*.test.ts",
   ]
}